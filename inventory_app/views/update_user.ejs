    <!--Main Site-->
    <main id="site-main">
        <div class="container">
            <div class="box-nav d flex justify-between">
            <div class="filter">
                <a href="/"><i class="fa fa-angle-double-left"></i>All Employees</a>
            </div>
            </div>
            <div class="form-title text-center">
                <h2 class="text-dark">Update User</h2>
                <br>
                <span class="text-light">Use the below form to update the account</span>
            </div>
            <br>
            <!--add user form-->
                        <!--form hadling-->
                        <form action="/api/userss" method="POST" id="update_user">
                            <div class="new_user">
                                <div class="form-group">
                                    <label for="name" class="text-light">Name</label>
                                    <input type="hidden" name="id" value="<%=user._id%>">
                                    <input type="text" name="name" value="<%=user.name%>" placeholder="">
                                </div>
                                <br/>
                                <div class="form-group">
                                     <label for="email" class="text-light">Email</label>
                                     <input type="hidden" name="email" value="">
                                     <input type="text" name="email" value="<%=user.email%>" placeholder="">
                             </div>
                             <br/>
                             <div class="form-group">
                                <label for="number" class="text-light">Phone Number :</label>
                                <input type="text" name="number" value="<%=user.number%>" placeholder="">
                                </div>
                                <br/>

                                <div class="form-group">
                                    <label for="designation" class="text-light">Designation :</label>
                                      <select id="designation" name="designation">
                                        <option value="<%=user.designation%>"><%=user.designation%></option>
                                          <option value="Office manager">Office manager</option>
                                          <option value="Facilities manager">Facilities manager</option>
                                          <option value="Account executive">Account executive</option>
                                          <option value="Program manager">Program manager</option>
                                          <option value="Clerk">Clerk</option>
                                          <option value="Accountant">Accountant</option>
                                          <option value="Business administrator">Business administrator</option>
                                      </select>
                                  </div>
                                  <br/>
                                  <div class="form-group">
                                    <label for="salary" class="text-light">Salary(Rs) :</label>
                                    <input type="number" min="0" max="" name="salary" value="<%=user.salary%>" placeholder="Enter employee's  salary...">
                                 </div>
                                 <br/>
                                <br/>
                             <div class="form-group">
                                 <label for="gender" class="text-light">Gender :</label>
                                 <div class="radio inline">
                                     <input type="radio" name="gender" value="Male">
                                     <label for="gender" class="text-light">Male</label>
                                     <input type="radio" name="gender" value="Female">
                                     <label for="gender" class="text-light">Female</label>
                                 </div>
                              <br/>
                                 <div class="form-group">
                                     <label for="status" class="text-light">Status :</label>
                                 <div class="radio inline">
                                     <input type="radio" name="status" value="FullDay">
                                     <label for="status" class="text-light">FullDay</label>
                                     <input type="radio" name="status" value="HalfDay">
                                     <label for="status" class="text-light">HalfDay</label>
                                 </div>
                             
                                 <div class="form-group">
                                    <input type="submit" value="Submit">
                                   </div>
              
                             </div>
                            </div>
                         </form>
        </br>
        </div>
