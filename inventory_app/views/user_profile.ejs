    <!--Main Site-->

        <link rel="stylesheet" href="css/user_profile.css">
        <script>
            window.onload = function () {
                document.getElementById("download")
                    .addEventListener("click", () => {
                        const employee = this.document.getElementById("employee");
                        console.log(employee);
                        console.log(window);
                        var opt = {
                            margin: 1,
                            filename: 'employee_details.pdf',
                            image: { type: 'jpeg', quality: 0.98 },
                            html2canvas: { scale: 2 },
                            jsPDF: { unit: 'in', format: 'letter', orientation: 'portrait' }
                        };
                        html2pdf().from(employee).set(opt).save();
                    })
            }
            
            </script>
              <script src="https://cdnjs.cloudflare.com/ajax/libs/html2pdf.js/0.9.2/html2pdf.bundle.js"></script>
       
              <br>
              <div class="box-nav d flex justify-between">
                <div class="filter">
                    <a href="/"><i class="fa fa-angle-double-left"></i>All Employees</a>
                </div>
            </div>
            <br>
        <div class="card" id="employee">
            <header id="header">
                <nav>
                 <div class="container">
                     <div class="text-center">
                         <a2 href="/" class="nav-brand text-dark">User Profile</a2>
                     </div>
                 </div>
                </nav>
            </header>

            <br>
          <img  src="images/profilePicture.png"/>
          <br>
          <h1><%=user.name%></h1>
          <br>
          <p1 class="title"><%=user.designation%></p1>
          <br><br>
          
          <div class="form-group">
            <label for="email" class="text-light">Email</label>
            <input type="hidden" name="email" value="">
            <input type="text" name="email" value="<%=user.email%>" readonly>
          </div>
          <div class="form-group">
            <label for="number" class="text-light">Contact Number</label>
            <input type="hidden" name="number" value="">
            <input type="text" name="number" value="<%=user.number%>" readonly>
          </div>
          <div class="form-group">
            <label for="salary" class="text-light">Salary</label>
            <input type="hidden" name="salary" value="">
            <input type="text" name="salary" value="<%=user.salary%>" readonly>
          </div>
          <div class="form-group">
            <label for="gender" class="text-light">Gender</label>
            <input type="hidden" name="gender" value="">
            <input type="text" name="gender" value="<%=user.gender%>" readonly>
          </div>
        </div>
        <div class="card">
            <div class="col-md-12 text-right mb-3">
              <button class="btn btn-primary" id="download"> Download Employee Details as a pdf</button>
            </div>
          </div>
        <br/><br/>





